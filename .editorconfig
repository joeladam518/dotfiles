root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_spaces = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_spaces = false
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.bat]
end_of_line = crlf
