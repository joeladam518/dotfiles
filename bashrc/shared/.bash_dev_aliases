# Development aliases

# Git Aliases
alias st='git status'
alias newbr='git checkout -b'
alias gc='git commit'
alias gp='git push'
# "git add/unadd with fzf"
alias gstg='git ls-files -m -o --exclude-standard | fzf --print0 -m | xargs -0 -t -o git add'
alias gunstg='git diff --cached --name-only | fzf --print0 -m | xargs -0 -t -o git reset -q'

# Vagrant Aliases
alias vu='vagrant up'
alias vh='vagrant halt'
alias vm='vagrant ssh'

# sail aliases
alias sail='./vendor/bin/sail'

# Docker aliases
alias dkrstpall='docker stop $(docker ps -aq)'
alias dkrrmall='docker rm $(docker ps -aq)'
alias dkrrmallimages='docker rmi $(docker images -q)'
