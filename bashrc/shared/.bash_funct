# Global Bash Functions

# showw the default gateway
showdefaultgateway() 
{
    ip route | grep default | cut -d' ' -f3
}
# shows the current dns server
showdns() 
{
    local nameserver
    
    nameserver="$( ( nmcli dev list || nmcli dev show ) 2>/dev/null | grep DNS | tr -s '[:space:]' | cut -d' ' -f2 )"
    
    if [ -z "$nameserver" ]; then
        nameserver="$(cat /etc/resolv.conf | grep 'nameserver' | head -1 |cut -d' ' -f2)"
    fi

    if [ -z "$nameserver" ] || [ "$nameserver" == "127.0.0.53" ]; then
        nameserver="$(showdefaultgateway)"
    fi
    
    if [ -z "$nameserver" ]; then
        echo "Couldn't find nameserver" 1>&2
        return 1
    fi

    echo "$nameserver"
}
# Creates an archive (*.tar.gz) from given directory.
tarthis()
{
    tar -cvzf "${1%%/}.tar.gz" "${1%%/}/";
}
# Create a ZIP archive of a file or folder.
zipthis()
{
    zip -r "${1%%/}.zip" "$1" ;
}
# Handy Extract function
extract()
{
    if [ -f $1 ]; then
        case $1 in
            *.tar.bz2) tar -xvjf $1 ;;
            *.tar.gz)  tar -xvzf $1 ;;
            *.bz2)     bunzip2 $1 ;;
            *.rar)     unrar -x $1 ;;
            *.gz)      gunzip $1 ;;
            *.tar)     tar -xvf $1 ;;
            *.tbz2)    tar -xvjf $1 ;;
            *.tgz)     tar -xvzf $1 ;;
            *.zip)     unzip $1 ;;
            *.Z)       uncompress $1 ;;
            *.7z)      7z -x $1 ;;
            *)         echo "'$1' cannot be extracted via >extract<" ;;
        esac
    else
        echo "'$1' is not a valid file!"
    fi
}
